<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e3e3"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#4169E1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Form for Taking an Appointment"
                    android:textColor="#fff"
                    android:textSize="18sp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/applicantNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="\t\tApplicant Name *">

                        <EditText
                            android:id="@+id/applicantName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"
                            android:drawableLeft="@drawable/ic_person_black_24dp"
                            android:inputType="text"
                            android:textColor="#5F9EA0"
                            android:textSize="16sp" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/usernameWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"
                            android:drawableLeft="@drawable/ic_email_black_24dp"
                            android:hint="\t\tEmail"
                            android:inputType="textEmailAddress"
                            android:textColor="#5F9EA0"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/numberWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <EditText
                            android:id="@+id/number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"
                            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                            android:hint="\t\tMobile number *"
                            android:inputType="phone"
                            android:textColor="#5F9EA0"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/addressWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <EditText
                            android:id="@+id/addressText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_border"
                            android:drawableLeft="@drawable/ic_add_location_black_24dp"
                            android:ems="10"
                            android:hint="\t\tAddress(House No/Street/Locality) *"
                            android:inputType="textMultiLine"
                            android:textColor="#5F9EA0"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/cityNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"
                            android:drawableLeft="@drawable/ic_location_city_black_24dp"
                            android:hint="\t\tCity/Town/Village *"
                            android:inputType="text"
                            android:textColor="#5F9EA0"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/postofficeNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/postofficeName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"
                            android:drawableLeft="@drawable/ic_drafts_black_24dp"
                            android:hint="\t\tPost Office *"
                            android:inputType="text"
                            android:textColor="#5F9EA0"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/districtNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/districtName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"
                            android:drawableLeft="@drawable/ic_home_black_24dp"
                            android:hint="\t\tDistrict *"
                            android:inputType="text"
                            android:textColor="#5F9EA0"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/pinWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/pin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"
                            android:drawableLeft="@drawable/ic_person_pin_circle_black_24dp"
                            android:hint="\t\tPIN *"
                            android:inputType="number"
                            android:textColor="#5F9EA0"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:paddingEnd="20dp"
                        android:background="@drawable/spinner_border" />

                    <Spinner
                        android:id="@+id/spinnerDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:paddingEnd="20dp"
                        android:background="@drawable/spinner_border" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:paddingEnd="20dp"
                        android:background="@drawable/spinner_border" />


                    <Spinner
                        android:id="@+id/spinner3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:paddingEnd="20dp"
                        android:background="@drawable/spinner_border" />


                    <Spinner
                        android:id="@+id/spinner4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:paddingEnd="20dp"
                        android:background="@drawable/spinner_border" />


                    <TextView
                        android:id="@+id/extraForSale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:text="** Below information is necessary only in case of deeds related to land/flat (e.g sale or gift of land/flat etc.)"
                        android:textColor="#D81B60"
                        android:visibility="gone" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/considerationWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/considerationAmt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"
                            android:drawableLeft="@drawable/ic_monetization_on_black_24dp"
                            android:hint="\t\tConsideration Amount *"
                            android:inputType="number"
                            android:text="0"
                            android:textColor="#5F9EA0"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:id="@+id/extraForSalePur"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:drawableLeft="@drawable/ic_wc_black_24dp"
                        android:text="\tPurchaser with"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/radio_both"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Both Female &amp; Male Members"
                            android:textSize="15sp"
                            android:checked="true"/>

                        <RadioButton
                            android:id="@+id/radio_onlyFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Only Female Member/Members"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/radio_onlyMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Only Male Member/Members"
                            android:textSize="15sp" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/landFlat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:drawableLeft="@drawable/ic_my_location_black_24dp"
                        android:text="\tLand/Flat is located in"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <RadioGroup
                        android:id="@+id/radioGroup2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/urbanMCA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Urban(Municipality Corporation) Area"
                            android:textSize="15sp"
                            android:checked="true"/>

                        <RadioButton
                            android:id="@+id/urbanMBA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Urban(Municipality Board) Area"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/rural"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rural Area"
                            android:textSize="15sp" />

                    </RadioGroup>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="8dp"
                        android:text="** Only one document type image is required"
                        android:textColor="#D81B60" />

                    <Spinner
                        android:id="@+id/spinner5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:paddingEnd="20dp"
                        android:background="@drawable/spinner_border" />

                    <Button
                        android:id="@+id/buttonChoose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="5dp"
                        android:text="Choose Image" />

                    <TextView
                        android:id="@+id/imageError"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@color/colorAccent"
                        android:textStyle="italic" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:src="@drawable/noimage"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnSubmit"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:backgroundTint="#228B22"
                            android:onClick="doSubmit"
                            android:text="Submit"
                            android:textColor="#fff" />

                        <Button
                            android:id="@+id/btnReset"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:backgroundTint="#4169E1"
                            android:text="Reset"
                            android:textColor="#fff" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>


