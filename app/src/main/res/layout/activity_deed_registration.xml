<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kofigyan.stateprogressbar.StateProgressBar
        android:id="@+id/state_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:spb_checkStateCompleted="true"
        app:spb_currentStateDescriptionColor="#228B22"
        app:spb_currentStateNumber="one"
        app:spb_descriptionTopSpaceIncrementer="5dp"
        app:spb_maxStateNumber="four"
        app:spb_stateBackgroundColor="#BDBDBD"
        app:spb_stateDescriptionColor="#808080"
        app:spb_stateForegroundColor="#228B22"
        app:spb_stateNumberBackgroundColor="#808080"
        app:spb_stateNumberForegroundColor="#eeeeee"
        app:spb_stateSize="40dp" />


    <!-- The Heading -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#4169E1">

        <TextView
            android:id="@+id/header_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/appoint"
            android:textColor="#fff"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <!-- Appointment Form -->
            <androidx.cardview.widget.CardView
                android:id="@+id/appoint_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/applicantNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name"
                        app:errorEnabled="true">

                        <EditText
                            android:id="@+id/applicantName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:drawableLeft="@drawable/ic_person"
                            android:inputType="textCapWords"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email">

                        <EditText
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="12dp"
                            android:drawableLeft="@drawable/ic_email"
                            android:inputType="textEmailAddress"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/deptNumWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/num"
                        app:errorEnabled="true">

                        <EditText
                            android:id="@+id/number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:drawableLeft="@drawable/ic_phone"
                            android:inputType="phone"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/addressWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/add"
                        app:errorEnabled="true">

                        <EditText
                            android:id="@+id/addressText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_add_location"
                            android:ems="10"
                            android:inputType="textCapWords"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/cityNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/city"
                        app:errorEnabled="true">

                        <EditText
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:drawableLeft="@drawable/ic_location_city"
                            android:inputType="textCapWords"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/postofficeNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/post"
                        app:errorEnabled="true">

                        <EditText
                            android:id="@+id/postofficeName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:drawableLeft="@drawable/ic_drafts"
                            android:inputType="textCapWords"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/districtNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/dis"
                        app:errorEnabled="true">

                        <EditText
                            android:id="@+id/districtName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:drawableLeft="@drawable/ic_home"
                            android:inputType="textCapWords"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/pinWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/pin"
                        app:errorEnabled="true">

                        <EditText
                            android:id="@+id/pin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:drawableLeft="@drawable/ic_person_pin"
                            android:inputType="number"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinner1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:ms_alignLabels="true"
                        app:ms_arrowColor="@color/colorAccent"
                        app:ms_arrowSize="14dp"
                        app:ms_enableErrorLabel="true"
                        app:ms_floatingLabelColor="@color/colorAccent"
                        app:ms_hint="@string/apptypeSpinner" />

                    <!--<Spinner-->
                    <!--android:id="@+id/spinner1"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginStart="8dp"-->
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:layout_marginBottom="10dp" />-->

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinnerDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:ms_alignLabels="true"
                        app:ms_arrowColor="@color/colorAccent"
                        app:ms_arrowSize="14dp"
                        app:ms_enableErrorLabel="true"
                        app:ms_floatingLabelColor="@color/colorAccent"
                        app:ms_hint="@string/dateSpinner" />

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:ms_alignLabels="true"
                        app:ms_arrowColor="@color/colorAccent"
                        app:ms_arrowSize="14dp"
                        app:ms_enableErrorLabel="true"
                        app:ms_floatingLabelColor="@color/colorAccent"
                        app:ms_hint="@string/sroSpinner" />

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinner3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:ms_alignLabels="true"
                        app:ms_arrowColor="@color/colorAccent"
                        app:ms_arrowSize="14dp"
                        app:ms_enableErrorLabel="true"
                        app:ms_floatingLabelColor="@color/colorAccent"
                        app:ms_hint="@string/deedSpinner" />

                    <!--<Spinner-->
                    <!--android:id="@+id/spinner3"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginStart="8dp"-->
                    <!--android:layout_marginBottom="10dp" />-->

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinner4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:ms_alignLabels="true"
                        app:ms_arrowColor="@color/colorAccent"
                        app:ms_arrowSize="14dp"
                        app:ms_enableErrorLabel="true"
                        app:ms_floatingLabelColor="@color/colorAccent"
                        app:ms_hint="@string/subdeedSpinner" />

                    <!--<Spinner-->
                    <!--android:id="@+id/spinner4"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginStart="8dp"-->
                    <!--android:layout_marginBottom="10dp" />-->


                    <TextView
                        android:id="@+id/extraForSale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/below"
                        android:textColor="@color/colorAccent"
                        android:visibility="gone" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/considerationWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/considerationAmt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableLeft="@drawable/ic_monetization"
                            android:hint="@string/conAmt"
                            android:inputType="number"
                            android:text="0"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/extraForSalePur"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:drawableLeft="@drawable/ic_wc"
                        android:text="@string/pur"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/radio_both"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/radio_both"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/radio_onlyFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/radio_only"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/radio_onlyMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/radio_onlyM"
                            android:textSize="15sp" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/landFlat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:drawableLeft="@drawable/ic_gps"
                        android:text="@string/land"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <RadioGroup
                        android:id="@+id/radioGroup2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/urbanMCA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/urbanMCA"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/urbanMBA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/urbanMBA"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/rural"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rural"
                            android:textSize="15sp" />

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center|bottom">

                        <Button
                            android:id="@+id/btnSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#228B22"
                            android:onClick="submitIt"
                            android:text="@string/next"
                            android:textColor="#fff" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!--Document Uploads-->
            <androidx.cardview.widget.CardView
                android:id="@+id/document_upload_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinner5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:ms_alignLabels="true"
                        app:ms_arrowColor="@color/colorAccent"
                        app:ms_arrowSize="14dp"
                        app:ms_enableErrorLabel="true"
                        app:ms_floatingLabelColor="@color/colorAccent"
                        app:ms_hint="@string/select_doc" />


                    <TextView
                        android:id="@+id/address_proof_error"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_image"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="@string/address"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/address_proof_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        app:srcCompat="@drawable/noimage" />


                    <!--NAME-->
                    <TextView
                        android:id="@+id/address_proof_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:alpha="0.5"
                        android:background="#1E90FF"
                        android:textAlignment="center" />


                    <TextView
                        android:id="@+id/age_proof_error"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_image"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="@string/age"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/age_proof_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        app:srcCompat="@drawable/noimage" />


                    <!--NAME-->
                    <TextView
                        android:id="@+id/age_proof_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:alpha="0.5"
                        android:background="#1E90FF"
                        android:textAlignment="center" />


                    <TextView
                        android:id="@+id/id_proof_error"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_image"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="@string/identity"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/id_proof_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        app:srcCompat="@drawable/noimage" />


                    <!--NAME-->
                    <TextView
                        android:id="@+id/id_proof_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:alpha="0.5"
                        android:background="#1E90FF"
                        android:textAlignment="center" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|bottom">

                        <Button
                            android:id="@+id/btnSubmit2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#228B22"
                            android:onClick="submitIt"
                            android:text="@string/next"
                            android:textColor="#fff" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!--Summary Form -->
            <androidx.cardview.widget.CardView
                android:id="@+id/confirm_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/confirm_msg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:paddingTop="25dp"
                        android:text="@string/iconfirm"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="17sp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/btnPrint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:backgroundTint="#228B22"
                        android:onClick="submitData"
                        android:text="@string/conSubmit"
                        android:textColor="#fff" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!--Make Payment-->
            <androidx.cardview.widget.CardView
                android:id="@+id/makePayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/deptTaxIdWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/deptID">

                        <EditText
                            android:id="@+id/deptTaxId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableLeft="@drawable/ic_assignment"
                            android:inputType="text"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/Namewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/payment_name">

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableLeft="@drawable/ic_person"
                            android:inputType="text"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/panWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/pan">

                        <EditText
                            android:id="@+id/pan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableLeft="@drawable/ic_pan_card"
                            android:inputType="text"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/blockwrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/block">

                        <EditText
                            android:id="@+id/block"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableLeft="@drawable/ic_home"
                            android:inputType="text"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/localitywrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/locality">

                        <EditText
                            android:id="@+id/locality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableLeft="@drawable/ic_person_pin"
                            android:inputType="text"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/areaWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/area">

                        <EditText
                            android:id="@+id/area"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableLeft="@drawable/ic_location_city"
                            android:inputType="text"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/pinCodeWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/payment_pin">

                        <EditText
                            android:id="@+id/pinCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableLeft="@drawable/ic_fiber_pin"
                            android:inputType="number"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/mobileWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/num">

                        <EditText
                            android:id="@+id/mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableLeft="@drawable/ic_phone"
                            android:inputType="number"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/remarksWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/remarks">

                        <EditText
                            android:id="@+id/remarks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableLeft="@drawable/ic_keyboard"
                            android:inputType="textMultiLine"
                            android:textSize="16sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|bottom"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:backgroundTint="#228B22"
                            android:onClick="doPay"
                            android:text="@string/pay"
                            android:textColor="#ffff" />

                    </LinearLayout>

                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/header_successful"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/success_msg"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp" />

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

</LinearLayout>

