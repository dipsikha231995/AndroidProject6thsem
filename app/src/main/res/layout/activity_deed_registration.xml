<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kofigyan.stateprogressbar.StateProgressBar
        android:id="@+id/state_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:spb_checkStateCompleted="true"
        app:spb_currentStateDescriptionColor="#228B22"
        app:spb_currentStateNumber="one"
        app:spb_descriptionTopSpaceIncrementer="5dp"
        app:spb_maxStateNumber="three"
        app:spb_stateBackgroundColor="#BDBDBD"
        app:spb_stateDescriptionColor="#808080"
        app:spb_stateForegroundColor="#228B22"
        app:spb_stateNumberBackgroundColor="#808080"
        app:spb_stateNumberForegroundColor="#eeeeee"
        app:spb_stateSize="40dp" />


    <!-- The Heading -->
    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#4169E1">

        <TextView
            android:id="@+id/header_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/appoint"
            android:textColor="#fff"
            android:textSize="18sp" />

    </android.support.v7.widget.CardView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">


            <!-- Appointment Form -->
            <android.support.v7.widget.CardView
                android:id="@+id/appoint_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/applicantNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name">

                        <EditText
                            android:id="@+id/applicantName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableLeft="@drawable/ic_person"
                            android:inputType="text"
                            android:textSize="16sp" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/usernameWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableLeft="@drawable/ic_email"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/numberWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <EditText
                            android:id="@+id/number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableLeft="@drawable/ic_phone"
                            android:hint="@string/num"
                            android:inputType="phone"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/addressWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <EditText
                            android:id="@+id/addressText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_add_location"
                            android:ems="10"
                            android:hint="@string/add"
                            android:inputType="textMultiLine"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/cityNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableLeft="@drawable/ic_location_city"
                            android:hint="@string/city"
                            android:inputType="text"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/postofficeNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/postofficeName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableLeft="@drawable/ic_drafts"
                            android:hint="@string/post"
                            android:inputType="text"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/districtNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/districtName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableLeft="@drawable/ic_home"
                            android:hint="@string/dis"
                            android:inputType="text"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/pinWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/pin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableLeft="@drawable/ic_person_pin"
                            android:hint="@string/pin"
                            android:inputType="number"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="10dp" />

                    <Spinner
                        android:id="@+id/spinnerDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="10dp" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="10dp" />


                    <Spinner
                        android:id="@+id/spinner3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="10dp" />


                    <Spinner
                        android:id="@+id/spinner4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="10dp" />


                    <TextView
                        android:id="@+id/extraForSale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/below"
                        android:textColor="#D81B60"
                        android:visibility="gone" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/considerationWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/considerationAmt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"
                            android:drawableLeft="@drawable/ic_monetization"
                            android:hint="@string/conAmt"
                            android:inputType="number"
                            android:text="0"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:id="@+id/extraForSalePur"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:drawableLeft="@drawable/ic_wc"
                        android:text="@string/pur"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/radio_both"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/radio_both"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/radio_onlyFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/radio_only"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/radio_onlyMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/radio_onlyM"
                            android:textSize="15sp" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/landFlat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:drawableLeft="@drawable/ic_gps"
                        android:text="@string/land"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <RadioGroup
                        android:id="@+id/radioGroup2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/urbanMCA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/urbanMCA"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/urbanMBA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/urbanMBA"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/rural"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rural"
                            android:textSize="15sp" />

                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center|bottom">

                        <Button
                            android:id="@+id/btnSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#228B22"
                            android:onClick="submitIt"
                            android:text="@string/next"
                            android:textColor="#fff" />


                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!--Document Uploads-->
            <android.support.v7.widget.CardView
                android:id="@+id/document_upload_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinner5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/address_proof_error"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_image"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="@string/address"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/address_proof_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        app:srcCompat="@drawable/noimage" />


                    <!--NAME-->
                    <TextView
                        android:id="@+id/address_proof_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:alpha="0.5"
                        android:background="#1E90FF"
                        android:textAlignment="center" />


                    <TextView
                        android:id="@+id/age_proof_error"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_image"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="@string/age"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/age_proof_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        app:srcCompat="@drawable/noimage" />


                    <!--NAME-->
                    <TextView
                        android:id="@+id/age_proof_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:alpha="0.5"
                        android:background="#1E90FF"
                        android:textAlignment="center" />


                    <TextView
                        android:id="@+id/id_proof_error"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:clickable="true"
                        android:drawableLeft="@drawable/ic_image"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:text="@string/identity"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/id_proof_imageView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        app:srcCompat="@drawable/noimage" />


                    <!--NAME-->
                    <TextView
                        android:id="@+id/id_proof_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:alpha="0.5"
                        android:background="#1E90FF"
                        android:textAlignment="center" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|bottom">

                        <Button
                            android:id="@+id/btnSubmit2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#228B22"
                            android:onClick="submitIt"
                            android:text="@string/next"
                            android:textColor="#fff" />


                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!--Summary Form -->
            <android.support.v7.widget.CardView
                android:id="@+id/confirm_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/confirm_msg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:paddingTop="25dp"
                        android:text="@string/iconfirm"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="17sp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/btnPrint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:backgroundTint="#228B22"
                        android:onClick="submitData"
                        android:text="@string/conSubmit"
                        android:textColor="#fff" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!--Appointment confirmation form-->

            <LinearLayout
                android:id="@+id/confirm_appointment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <android.support.v7.widget.CardView
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:layout_gravity="center"
                    android:elevation="10dp"
                    app:cardCornerRadius="80dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="8dp"
                        android:paddingLeft="3dp"
                        android:paddingBottom="2dp"
                        app:srcCompat="@drawable/goa" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Revenue &amp; Disaster Management"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Govt. of Assam"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#228B22">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/ic_check_circle_black_24dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:paddingTop="6dp"
                        android:text="Your Appointment is Confirmed"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:text="Your Appointment ID:"
                            android:textSize="17sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:text="** Please note this Appointment ID for future reference.\n"
                            android:textColor="#F08080"
                            android:textSize="16sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:text="Appointment for appointment id ______ is confirmed. You are requested to report on date ____ at ___ am/pm and submit the registration fees.\n"
                            android:textSize="16sp" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>



