<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e3e3"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#4169E1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Add Bride Details"
                    android:textColor="#fff"
                    android:textSize="18sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nameWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="\t\tName of Bride*">

                        <EditText
                            android:id="@+id/Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_person"
                            android:inputType="text"
                            android:textColor="#4682B4"
                            android:textSize="16sp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ageWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="\t\tAge *">

                        <EditText
                            android:id="@+id/Age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_today"
                            android:inputType="number"
                            android:textColor="#4682B4"
                            android:textSize="16sp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/occupationWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="\t\tOccupation *">

                        <EditText
                            android:id="@+id/Occupation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_work"
                            android:inputType="text"
                            android:textColor="#4682B4"
                            android:textSize="16sp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fathernameWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="\t\tFather's Name *">

                        <EditText
                            android:id="@+id/FName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_father"
                            android:inputType="text"
                            android:textColor="#4682B4"
                            android:textSize="16sp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"/>

                    </com.google.android.material.textfield.TextInputLayout>


                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:paddingEnd="20dp"
                        android:background="@drawable/spinner_border" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="#4169E1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Present Address"
                            android:textColor="#fff"
                            android:textSize="18sp" />

                    </androidx.cardview.widget.CardView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/cityNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">

                        <EditText
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location_city"
                            android:hint="\t\tCity/Town/Village *"
                            android:inputType="text"
                            android:textColor="#4682B4"
                            android:textSize="16sp"
                            android:background="@drawable/edittext_border"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/policeStationwrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/policeStation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location_on"
                            android:hint="\t\tPolice Station *"
                            android:inputType="text"
                            android:textColor="#4682B4"
                            android:textSize="16sp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/postofficeNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/postofficeName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_drafts"
                            android:hint="\t\tPost Office *"
                            android:inputType="text"
                            android:textColor="#4682B4"
                            android:textSize="16sp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/districtNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/districtName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_home"
                            android:hint="\t\tDistrict *"
                            android:inputType="text"
                            android:textColor="#4682B4"
                            android:textSize="16sp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/stateNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/stateName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_person_pin"
                            android:hint="\t\tState *"
                            android:inputType="text"
                            android:textColor="#4682B4"
                            android:textSize="16sp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/pinWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/pin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_fiber_pin"
                            android:hint="\t\tPIN *"
                            android:inputType="number"
                            android:textColor="#4682B4"
                            android:textSize="16sp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/lengthResidencewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/lengthResidence"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_timer"
                            android:hint="\t\tLength of residence (in years)"
                            android:inputType="number"
                            android:textColor="#4682B4"
                            android:textSize="16sp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="#4169E1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:padding="5dp"
                            android:gravity="center"
                            android:text="Permanent Address\n(If same as Present)"
                            android:textColor="#fff"
                            android:textSize="18sp" />

                        <CheckBox
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:buttonTint="@android:color/white"
                            android:id="@+id/checkbox"/>

                    </androidx.cardview.widget.CardView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/per_cityNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">

                        <EditText
                            android:id="@+id/per_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location_city"
                            android:hint="\t\tCity/Town/Village *"
                            android:inputType="text"
                            android:textColor="#4682B4"
                            android:textSize="16sp"
                            android:background="@drawable/edittext_border"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/per_policeStationwrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/per_policeStation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location_on"
                            android:hint="\t\tPolice Station *"
                            android:inputType="text"
                            android:textColor="#4682B4"
                            android:textSize="16sp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/per_postofficeNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/per_postofficeName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_drafts"
                            android:hint="\t\tPost Office *"
                            android:inputType="text"
                            android:textColor="#4682B4"
                            android:textSize="16sp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/per_districtNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/per_districtName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_home"
                            android:hint="\t\tDistrict *"
                            android:inputType="text"
                            android:textColor="#4682B4"
                            android:textSize="16sp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/per_stateNamewrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/per_stateName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_person_pin"
                            android:hint="\t\tState *"
                            android:inputType="text"
                            android:textColor="#4682B4"
                            android:textSize="16sp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/per_pinWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/per_pin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_fiber_pin"
                            android:hint="\t\tPIN *"
                            android:inputType="number"
                            android:textColor="#4682B4"
                            android:textSize="16sp"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"/>
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1220dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnReset"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#4169E1"
                        android:text="Reset"
                        android:textColor="#fff" />


                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#228B22"
                        android:onClick="doNext"
                        android:text="Next"
                        android:textColor="#fff" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>


</LinearLayout>