<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e3e3"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#4169E1">

        <TextView
            android:id="@+id/header_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="Form for Assessment of Stamp Duty and Registration Fee"
            android:textColor="#fff"
            android:textSize="18sp" />

    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:id="@+id/appoint_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <Spinner
                        android:id="@+id/spinner3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/spinner_border"
                        android:paddingEnd="20dp"/>


                    <Spinner
                        android:id="@+id/spinner4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/spinner_border"
                        android:paddingEnd="20dp" />


                    <TextView
                        android:id="@+id/extraForSale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="** Below information is necessary only in case of deeds related to land/flat (e.g sale or gift of land/flat etc.)"
                        android:textColor="#D81B60" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/considerationWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/considerationAmt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:background="@drawable/edittext_border"
                            android:drawableLeft="@drawable/ic_monetization_on_black_24dp"
                            android:hint="\t\tConsideration Amount *"
                            android:inputType="number"
                            android:textColor="#5F9EA0"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>


                    <TextView
                        android:id="@+id/extraForSalePur"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:drawableLeft="@drawable/ic_wc_black_24dp"
                        android:text="\tPurchaser with"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/radioGroup1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radio_both"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Both Female &amp; Male Members"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/radio_onlyFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Only Female Member/Members"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/radio_onlyMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Only Male Member/Members"
                            android:textSize="15sp" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/landFlat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:drawableLeft="@drawable/ic_my_location_black_24dp"
                        android:text="\tLand/Flat is located in"
                        android:textSize="16sp" />

                    <RadioGroup
                        android:id="@+id/radioGroup2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/edittext_border"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/urbanMCA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Urban(Municipality Corporation) Area"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/urbanMBA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Urban(Municipality Board) Area"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/rural"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rural Area"
                            android:textSize="15sp" />

                    </RadioGroup>


                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:backgroundTint="#228B22"
                        android:onClick="submitIt"
                        android:text="Next"
                        android:textColor="#fff" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>