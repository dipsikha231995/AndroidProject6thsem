<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:elevation="10dp"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    android:paddingLeft="3dp"
                    android:paddingBottom="2dp"
                    android:src="@drawable/goablue2" />
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Revenue &amp; Disaster Management"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Govt. of Assam"
                android:textColor="#000"
                android:textSize="16sp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="8"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:rowCount="2">

                  <!--<LinearLayout-->
                      <!--android:layout_width="match_parent"-->
                      <!--android:layout_height="match_parent"-->
                      <!--android:gravity="center"-->
                      <!--android:orientation="horizontal">-->

                    <Button
                        android:id="@+id/button"
                        android:layout_width="157dp"
                        android:layout_height="210dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="#fff"
                        android:drawableTop="@drawable/money"
                        android:text="Instant assessment &amp; deed registration fee"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="157dp"
                        android:layout_height="210dp"
                        android:layout_marginTop="14dp"
                        android:background="#fff"
                        android:drawableTop="@drawable/addfriend"
                        android:onClick="doDeedRegister"
                        android:paddingTop="12dp"
                        android:text="Deed\nRegistration"
                        android:textSize="14sp" />

                  <!--</LinearLayout>-->

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:orientation="horizontal">-->

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="157dp"
                        android:layout_height="210dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="10dp"
                        android:background="#fff"
                        android:drawableTop="@drawable/weddingrings"
                        android:onClick="doMarriageRegistration"
                        android:paddingTop="9dp"
                        android:text="Marriage\nRegistration"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="157dp"
                        android:layout_height="210dp"
                        android:layout_marginTop="0dp"
                        android:background="#fff"
                        android:drawableTop="@drawable/eye"
                        android:paddingTop="9dp"
                        android:text="View Appointment Status"
                        android:onClick="doViewStaus"
                        android:textSize="14sp" />

                  <!--</LinearLayout>-->

                </GridLayout>

        </LinearLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>